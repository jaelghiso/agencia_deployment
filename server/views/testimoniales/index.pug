extends ../layout/index
block contenido
    main.container.mt-5
        h1.text-center.mb-5 #{pagina}



        .row
            .col-md-12
                include ../layout/partials/testimoniales
                
            .col-md-12
                h2.text-center Agrega un Testimonial
                if(errores)
                    each error in errores
                        .alert.alert-danger.text-center=error.mensaje
                .row.justify-content-center
                    .col-md-8
                        form(action="/testimoniales", method="POST")
                            .form-group
                                label(for="name") Nombre
                                input(id="name", class="form-control" type="text", placeholder="Tu Nombre", name="name", value=name)
                            .form-group
                                label(for="email") Email
                                input(id="email", class="form-control" type="email", placeholder="Tu Email", name="email", value=email)
                            .form-group
                                label(for="message") Mensaje
                                textarea#message(name="message",class="form-control", rows="3", placeholder="Ingresa su mensaje aqu√≠")=message
                            input.btn.btn-success.btn-block(type="submit", value="Agregar comentario")